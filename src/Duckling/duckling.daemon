#!/bin/bash -xv
#
# Duckling service for NoSnips replacement.
# Usage:
#     duckling.daemon <path/to/susi.toml>
#
#

# set config path:
#
CONFIG="/etc/susi.toml"
source $SUSI_INSTALLATION/bin/toml2env $CONFIG

# load tool funs:
#
source $SUSI_INSTALLATION/src/Tools/funs.sh
source $SUSI_INSTALLATION/src/Tools/topics.sh

DUCKLING_DIR="$(relDir $duckling_install_dir)"


# run forever:
#
cd $DUCKLING_DIR
while true ; do

  stack exec duckling-example-exe -- --port $duckling_port
  sleep 10
done
